{
  "name": "vscode-symfony-ux-twig-component",
  "displayName": "VSCode Symfony UX Twig Component",
  "description": "References, highlights, and formats Twig components for Symfony UX",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/SandBlock/vscode-symfony-ux-twig-component.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:twig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "twig",
        "extensions": [
          ".twig"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "symfonyUxTwigComponent.navigateToComponent",
        "title": "Navigate to Twig Component"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == twig",
          "command": "symfonyUxTwigComponent.navigateToComponent",
          "group": "navigation"
        }
      ]
    },
    "grammars": [
      {
        "injectTo": [
          "text.html.twig"
        ],
        "scopeName": "text.html.twig-component",
        "path": "./syntaxes/twig-component.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Symfony UX Twig Component Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/twig-component-color-theme.json"
      }
    ],
    "configuration": {
      "title": "Symfony UX Twig Component",
      "properties": {
        "symfonyUxTwigComponent.phpBasePaths": {
          "type": "array",
          "default": [
            "src/Content",
            "src/Portal/Shared",
            "src"
          ],
          "description": "Base paths for PHP component files. The extension will match these with the namespace in the component tag."
        },
        "symfonyUxTwigComponent.phpComponentPaths": {
          "type": "array",
          "default": [
            "Twig/Component/${namespace}/${componentName}.php",
            "Components/${namespace}/${componentName}.php",
            "Twig/Components/${namespace}/${componentName}.php"
          ],
          "description": "Relative paths (from base paths) to look for PHP component files. Use ${namespace} and ${componentName} as placeholders."
        },
        "symfonyUxTwigComponent.twigBasePaths": {
          "type": "array",
          "default": [
            "templates/content",
            "templates/portal/shared",
            "templates"
          ],
          "description": "Base paths for Twig template files. The extension will match these with the namespace in the component tag."
        },
        "symfonyUxTwigComponent.twigTemplatePaths": {
          "type": "array",
          "default": [
            "components/${namespace}/${componentName}.html.twig",
            "twig/components/${namespace}/${componentName}.html.twig",
            "${namespace}/${componentName}.html.twig"
          ],
          "description": "Relative paths (from base paths) to look for Twig template files. Use ${namespace} and ${componentName} as placeholders."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  }
}
